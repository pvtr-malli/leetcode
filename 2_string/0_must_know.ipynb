    "# ord.\n",
    "ord('a')  # starts 97. so to create a counter which refers 0 index for a\n",
    "\n",
    "counter = [0]*26\n",
    "for char in \"apple\":\n",
    "    counter[ord(char) - ord('a')] += 1\n",
    "print(counter) # this count the character in the word and creates the charcter array."
   ]
